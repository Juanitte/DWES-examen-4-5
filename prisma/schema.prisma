generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Repartidor {
  id          Int      @id @default(autoincrement())
  nombre      String
  telefono    String
  pedidos     Pedido[]

  @@map("repartidores")
}

model Pedido {
  id                  Int           @id @default(autoincrement())
  nombre              String
  fecha_y_hora        DateTime
  nombre_cliente      String
  direccion_cliente   String
  repartidor_id       Int?
  repartidor          Repartidor?   @relation(fields: [repartidor_id], references: [id])
  pizzas              Pizza[]

  @@map("pedidos")
}

model Pizza {
  id            Int    @id @default(autoincrement())
  nombre        String
  precio        Float
  Pedidos       Pedido[]

  @@map("pizzas")
}